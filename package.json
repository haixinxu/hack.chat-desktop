{
  "name": "Chatron",
  "version": "0.1.0",
  "main": "main.js",
  "engines": {
    "node": ">=6.5.0"
  },
  "author": "raf924",
  "description": "A cross-platform client",
  "scripts": {
    "start": "node start.js",
    "dev": "node_modules\\.bin\\electron.cmd . dev",
    "debug": "node_modules\\.bin\\electron.cmd %NODE_DEBUG_OPTION% . dev",
    "package": "node build.js && node package.js",
    "build": "node build.js",
    "install:electron": "npm install electron && npm install electron-builder && npm install electron-packager",
    "build:cordova": "node build.js && cd cordova && ../node_modules/.bin/cordova prepare && node copyIcon.js && ../node_modules/.bin/cordova build",
    "run:android": "node build.js && cd cordova && node copyIcon.js && ..\\node_modules\\.bin\\cordova.cmd run android"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/raf924/hack.chat-desktop"
  },
  "keywords": [
    "hack.chat",
    "client",
    "desktop",
    "electron"
  ],
  "build": {
    "appId": "tk.rafaelnaciri.chatron"
  },
  "license": "MIT",
  "dependencies": {
    "titlebar": "^1.4.0"
  },
  "optionalDependencies": {
    "cordova": "^6.5.0",
    "extract-text-webpack-plugin": "^2.0.0-rc.3",
    "file-loader": "^0.10.0",
    "html-loader": "^0.4.4",
    "webpack": "^2.2.1",
    "css-loader": "^0.26.1"
  },
  "devDependencies": {
    "@types/cordova": "0.0.34",
    "@types/electron": "^1.4.31",
    "@types/electron-builder": "^2.0.29",
    "@types/hammerjs": "^2.0.34",
    "@types/jquery": "^2.0.40",
    "@types/node": "^6.0.62",
    "@types/webpack": "^2.2.4",
    "bower": "^1.8.0",
    "copy-webpack-plugin": "^4.0.1",
    "less": "^2.7.2",
    "typescript": "^2.2.1",
    "xml2js": "^0.4.17"
  }
}
